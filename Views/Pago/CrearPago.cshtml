@model Pago
@{
    ViewData["Title"] = "Crear Pago";
}

<div class="text-center mb-4">
    <h2 class="display-4">Crear Pago</h2>
</div>

<div class="container col-8">
    <h4>Nuevo Pago</h4>
    
    @if (ViewBag.Inquilino != null)
    {
        <h6>Inquilino: @($"{ViewBag.Inquilino.Nombre} {ViewBag.Inquilino.Apellido}")</h6>
    }
    @if (ViewBag.Inmueble != null)
    {
        <h6>Inmueble: @ViewBag.Inmueble.Direccion</h6>
    }
    
    <form method="post" asp-action="GuardarPago">
        <div class="row mt-3">
            <div class="form-floating mb-3 col-6">
                <input type="text" asp-for="Id_Contrato" class="form-control" placeholder="" />
                <label asp-for="Id_Contrato" class="control-label">NÂ° de Contrato</label>
                <span asp-validation-for="Id_Contrato" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Monto" class="form-control" placeholder="" />
                <label asp-for="Monto" class="control-label">Monto</label>
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-floating mb-3 col-6">
                <input asp-for="Periodo" class="form-control" placeholder="" />
                <label asp-for="Periodo" class="control-label">Periodo (MM/YYYY)</label>
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Fecha_Pago" type="date" class="form-control" placeholder="" />
                <label asp-for="Fecha_Pago" class="control-label">Fecha de Pago</label>
                <span asp-validation-for="Fecha_Pago" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-12 text-center mt-3">
            <input type="submit" value="Guardar" class="btn btn-success w-25 mx-2" />
            <a asp-action="ListadoPagos" class="btn btn-primary w-25 mx-2">Volver</a>
        </div>
    </form>
</div>
